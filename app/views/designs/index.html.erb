<p id="notice"><%= notice %></p>

<h1>Designs</h1>

<table>
  <thead>
    <tr>
      <th>Selector</th>
      <th>Guide</th>
      <th>Area</th>
      <th>Sectors</th>
      <th>Finishes</th>
      <th>Availability</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @designs.each do |design| %>
      <tr>
        <td><%= design.selector %></td>
        <td><%= design.guide %></td>
        <td><%= design.area %></td>
        <td><%= design.sectors %></td>
        <td><%= design.finishes %></td>
        <td><%= design.availability %></td>
        <td><%= design.product %></td>
        <td><%= link_to 'Show', design %></td>
        <td><%= link_to 'Edit', edit_design_path(design) %></td>
        <td><%= link_to 'Destroy', design, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

