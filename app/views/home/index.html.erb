<style>
h1{
	font-size: 40px;
	color: white;
}
.carousel-caption1 {
    position: absolute;
    left: auto;
    right: auto;
    width: 40%;
    height: 100%;
    background-color: #428bca;
    opacity: 0.8;
    bottom:0;
    right:0;
}	
.carousel-caption2 {
    position: absolute;
    top: auto;
    bottom: auto;
    width: 100%;
    height: 20%;
    background-color: #428bca;
    opacity: 0.8;
    top:0;
    right:0;
}
.glyphicon {
    font-size: 50px;
}
img{
	margin-left: auto;
	margin-right: auto;
}
</style>
<header>
    <div class="header-content page-wrap"  style="background-color: white;">
        <div class="header-content-inner">
			<div style="padding-left: 30px;padding-bottom: 50px;background-color: rgba(192,192,192,0.5);">
	        	<% u = current_user.user_info %>	
			   <p style="padding: 40px 0px 0px 0px; font-size: 30px;font-weight:lighter;">Hello<%= " "+u.name if u != nil %>, Dear Merino Family Member!</p><br>
			   <p style="font-size: 20px;font-weight:lighter;">Welcome to MyMerino Portal.</p><br>
			   <p style="font-size: 15px;">Your new home for-Product related information, Training, Certifications, Company, Events and so much more! click below to learn more about MyMerino</h6><hr>
			   <a href="https://s3.ap-south-1.amazonaws.com/ppts-merino/Merino-Corp-Profile.pdf" target="_blank" class="btn btn-primary">Learn more</a>
			</div>
			<div class="blue-gradient" style="padding: 20px">
				<p class="text-center" style="font-size: 25px;font-weight: 5;padding-top: 15px">Quote of the Day!</p>
				<h3 class="text-center"><strong><%= Quote.last.content %></strong></h3>
				<h4 class="text-center">-<%= Quote.last.speaker %></h4>
			</div>
			<div class="bg-dark" ">

				<hr>
				<h1>Product Updates</h1>
				<br>
				<div id="myCarousel" class="carousel slide" data-ride="carousel">
					<!-- Indicators -->
					<ol class="carousel-indicators">
					<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
					<li data-target="#myCarousel" data-slide-to="1"></li>
					<li data-target="#myCarousel" data-slide-to="2"></li>
					</ol>

					<!-- Wrapper for slides -->
					<div class="carousel-inner">
						<% p_active = "active" %>
						<% ProductUpdate.all.each do |p| %>
							<div class="item <%= p_active %>">
							    <img src="<%= p.link %>">
							</div>
							<% p_active = "" %>
						<% end %>
					</div>

					<!-- Left and right controls -->
					<a class="left carousel-control" href="#myCarousel" data-slide="prev">
					<span class="glyphicon glyphicon-chevron-left"></span>
					<span class="sr-only">Previous</span>
					</a>
					<a class="right carousel-control" href="#myCarousel" data-slide="next">
					<span class="glyphicon glyphicon-chevron-right"></span>
					<span class="sr-only">Next</span>
					</a>
				</div>
			</div>			
			<br>

			<div class="bg-dark" style="border-radius: 10px;width: 100%;height:90vh;">

				<br>
				<h1>Marketing Events</h1>
				<hr>
				<!-- Link to Events -->
				<a name="Events">&nbsp;</a>

				<div class="row">

					<div id="myCarousel2" class="carousel slide col-md-8 col-md-offset-2" data-ride="carousel">
						<!-- Indicators -->
						<ol class="carousel-indicators">
						<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
						<li data-target="#myCarousel" data-slide-to="1"></li>
						<li data-target="#myCarousel" data-slide-to="2"></li>
						</ol>

						  <!-- Wrapper for slides -->
						<div class="carousel-inner">
							<% state = "active" %>
							<% Event.all.each do |e| %>
						    <div class="item <%= state %>">
						      <img src="<%= e.other %>" style="height: 60vh">
						      	  <% state = "" %>
								  <div class="carousel-caption1 d-none d-md-block" style="background-color: white; color: black;">
								    <h2><%= e.name %></h2>
								    <p><%= e.caption %></p>
								  </div>
						    </div>
						    <% end %>

						  <!-- Left and right controls -->
						  <a class="left carousel-control" href="#myCarousel2" data-slide="prev">
						    <span class="glyphicon glyphicon-chevron-left"></span>
						    <span class="sr-only">Previous</span>
						  </a>
						  <a class="right carousel-control" href="#myCarousel2" data-slide="next">
						    <span class="glyphicon glyphicon-chevron-right"></span>
						    <span class="sr-only">Next</span>
						  </a>
						</div>
					</div>
				</div>	
				<br><br>
        	</div>




			<br>

			<div class="container bg-dark" style="border-radius: 10px;width:100%;height:130vh;padding-left: 10%;padding-right: 10%">
				<br>
				<h1>Organization Updates</h1>
				<hr>

				<!-- Link to Events -->
				<a name="Gallery">&nbsp;</a>

				<div class="row">

					<div id="myCarousel3" class="carousel slide" data-ride="carousel">
						<!-- Indicators -->
						<ol class="carousel-indicators">
						<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
						<li data-target="#myCarousel" data-slide-to="1"></li>
						<li data-target="#myCarousel" data-slide-to="2"></li>
						</ol>

						<!-- Wrapper for slides -->
						<div class="carousel-inner">
						<div class="item active">
							<img src="/events/3.jpg" style="height: 100vh">
							<div class="carousel-caption2 d-none d-md-block" style="background-color: silver; color: black;">
							<h2>Meeting</h2>
							<p>Meeting at MyMerino</p>
							</div>
						</div>

						<div class="item" style="height: 100vh">
							<video class="video-1" target="_blank" src="https://s3.ap-south-1.amazonaws.com/training-videos-merino/HPL101-Part2.mp4" controls="" preload="none" poster="//s3-ap-south-1.amazonaws.com/mymerinoproduction1/academy/videos/thumbnails/2HPL_101_2-2.jpg?1533277411" width="100%">	
							</video>
									  <div class="carousel-caption2 d-none d-md-block" style="background-color: silver; color: black;">
									    <h2>Course Videos</h2>
									    <p>Most popular course video</p>
									  </div>
						</div>



					</div><br><br>
	        	</div>
   			 </div> 
   		</div>	 

		<div id="carouselButtons">

			<a class="left btn btn-default btn-xs" href="#myCarousel3" data-slide="prev">
			<span class="glyphicon glyphicon-backward"></span>
			<span class="sr-only">Previous</span>
			</a>

		    <button id="playButton" type="button" class="btn btn-default btn-xs">
		        <span class="glyphicon glyphicon-play"></span>
		     </button>

		    <button id="pauseButton" type="button" class="btn btn-default btn-xs">
		        <span class="glyphicon glyphicon-pause"></span>
		    </button>

			<a class="right btn btn-default btn-xs" href="#myCarousel3" data-slide="next">
			<span class="glyphicon glyphicon-forward"></span>
			<span class="sr-only">Previous</span>
			</a>

		</div>

		<br>

		<div class="bg-dark" style="border-radius: 10px;width: 100%">
			<br>
			<h1>Press Release</h1>
			<hr>
			<a href="https://s3.ap-south-1.amazonaws.com/press-merino/PressCoverage-Merino.pdf" target="_blank">
				<img src="https://s3.ap-south-1.amazonaws.com/press-merino/New+Doc+2018-05-26_15.jpg" width="50%">				
			</a>
			<h3 style="color: white">Click on the image to see all press releases</h3>
			<br><br><br>
		</div>

    </div>
</header>

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script>
$( document ).ready(function(){
$('.mycarousel').carousel();
});

$('.carousel').carousel({
    interval: 2000
});  

$('#playButton').click(function () {
    $('#myCarousel3').carousel('cycle');
});
$('#pauseButton').click(function () {
    $('#myCarousel3').carousel('pause');
});



</script>

