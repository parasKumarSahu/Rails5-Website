<style>
.features-boxed {
  color:#313437;
  background-color:#eef4f7;
}

.features-boxed p {
  color:#7d8285;
}

.features-boxed h2 {
  font-weight:bold;
  margin-bottom:40px;
  padding-top:40px;
  color:inherit;
}

@media (max-width:767px) {
  .features-boxed h2 {
    margin-bottom:25px;
    padding-top:25px;
    font-size:24px;
  }
}

.features-boxed .intro {
  font-size:16px;
  max-width:500px;
  margin:0 auto;
}

.features-boxed .intro p {
  margin-bottom:0;
}
.features-boxed .features {
  padding:50px 0;
}

.features-boxed .item {
  text-align:center;
}

.features-boxed .item .box {
  text-align:center;
  padding:30px;
  background-color: silver;
  margin-bottom:30px;
}

.features-boxed .item .icon {
  font-size:60px;
  color:#1485ee;
  margin-top:20px;
  margin-bottom:35px;
}

.features-boxed .item .name {
  font-weight:bold;
  font-size:18px;
  margin-bottom:8px;
  margin-top:0;
  color:inherit;
}

.features-boxed .item .description {
  font-size:15px;
  margin-top:15px;
  margin-bottom:20px;
}

</style>

<header>
    <div class="header-content page-wrap">
        <div class="header-content-inner">

			<% Family.all.each do |f| %>
			<div class="features-boxed" style="margin-top:10px">
			    <div class="container">
			        <div class="intro">
			            <h2 class="text-center"><%= f.name %></h2>
			            <p class="text-center">Product Database of all <%= f.name %> Based Products</p>
			        </div>
			        <div class="row justify-content-center features">
						<% f.products.each do |p|%>
							<%= link_to "/home/overview?product="+p.name do%>
				            <div class="col-sm-5 col-md-5 col-lg-4 item">
				                <div class="box">
				                    <h3 class="name"><%= p.name %></h3>
								</div>
				            </div>
					        <% end %>            
				        <% end %>
			        </div>
			    </div>
			</div>
			<% end %>

        </div>
    </div>
</header>
