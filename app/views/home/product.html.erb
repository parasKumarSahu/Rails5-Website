<style>
.features-boxed {
  color:#313437;
  background-color: grey;
  border-radius: 40px;
}

.features-boxed h2 {
  font-weight:bold;
  margin-bottom:40px;
  padding-top:40px;
  color:inherit;
}

@media (max-width:767px) {
  .features-boxed h2 {
    margin-bottom:20px;
    padding-top:20px;
    font-size:30px;
  }
}

.features-boxed .intro {
  font-size:16px;
  max-width:500px;
  margin:0 auto;
}

.features-boxed .intro p {
  margin-bottom:0;
}
.features-boxed .features {
  padding:30px 0;
}

.features-boxed .item {
  text-align:center;
}

.features-boxed .item .box {
  text-align:center;
  padding:10px;
  margin-bottom:50px;
  border-style: groove;
  border-radius: 50px;
}

.box:hover {
	background-color: rgba(192,192,192,0.2);
	color: white;
}
.box:visited {
	color: black;
}

</style>

<style>
h1{
	font-size: 40px;
	color: white;
}	
h4{
	color: white;
}
img{
	margin-left: auto;
	margin-right: auto;
}

</style>


<header>
    <div class="header-content page-wrap">

				<div id="myCarousel" class="carousel slide" data-ride="carousel">
				  <!-- Indicators -->
				  <ol class="carousel-indicators">
				    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
				    <li data-target="#myCarousel" data-slide-to="1"></li>
				    <li data-target="#myCarousel" data-slide-to="2"></li>
				  </ol>

				  <!-- Wrapper for slides -->
				  <div class="carousel-inner">
				    <div class="item active">
				      <img src="/carousel/antifinger-banner.jpg" alt="Antifinger Laminates">
				    </div>

				    <div class="item">
				      <img src="/carousel/imagino-banner.jpg" alt="Antifinger Laminates">
				    </div>

				    <div class="item">
				      <img src="/carousel/superclad-banner.jpg" alt="Antifinger Laminates">
				    </div>
				  </div>

				  <!-- Left and right controls -->
				  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
				    <span class="glyphicon glyphicon-chevron-left"></span>
				    <span class="sr-only">Previous</span>
				  </a>
				  <a class="right carousel-control" href="#myCarousel" data-slide="next">
				    <span class="glyphicon glyphicon-chevron-right"></span>
				    <span class="sr-only">Next</span>
				  </a>
				</div>
				<hr>




        <div class="header-content-inner">


			<% Family.all.each do |f| %>
			<div class="features-boxed" style="margin-top:10px">
			    <div class="container">
			        <div class="intro">
			        	<hr>
			            <h1 class="text-center"><%= f.name %></h1>
			            <hr>
			            <h4 class="text-center">Product Database of all <%= f.name %> Based Products</h4>
			        </div>
			        <div class="row justify-content-center features">
						<% f.products.each do |p|%>
							<%= link_to "/home/overview?product="+p.name do%>
				            <div class="col-sm-5 col-md-5 col-lg-4 item">
				                <div class="box"  style="background-color: rgba(192,192,192,0.5)">
				                    <h3 class="name"><%= p.name %></h3>
								</div>
				            </div>
					        <% end %>            
				        <% end %>
			        </div>
			    </div>
			</div>
			<% end %>

        </div>
    </div>
</header>


<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script>
  $( document ).ready(function(){
  $('#mycarousel').carousel();
  });

$('.carousel').carousel({
    interval: 6000
});   
</script>
