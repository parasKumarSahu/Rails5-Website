<% Family.all.each do |f| %>
<div class="features-boxed" style="margin-top:10px">
    <div class="container">
        <div class="intro">
            <h2 class="text-center"><%= f.name %></h2>
            <p class="text-center">Product Database of all <%= f.name %> Based Products</p>
        </div>
        <div class="row justify-content-center features">
			<% f.products.each do |p|%>
				<%= link_to "/home/overview?product="+p.name do%>
	            <div class="col-sm-5 col-md-5 col-lg-4 item">
	                <div class="box">
	                    <h3 class="name"><%= p.name %></h3>
					</div>
	            </div>
		        <% end %>            
	        <% end %>
        </div>
    </div>
</div>
<% end %>
